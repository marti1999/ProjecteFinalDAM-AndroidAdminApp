<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rewardLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"


    android:paddingLeft="17dp"
    android:paddingTop="5dp"
    android:paddingRight="17dp"
    android:paddingBottom="5dp">


    <LinearLayout
        android:id="@+id/rewardHeaderLaout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/rewardImageExpand"
            style="@style/imageViewEsdeveniment"
            android:layout_width="wrap_content"


            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            app:srcCompat="@drawable/downarrow" />

        <TextView
            android:id="@+id/RewardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="0.3"
            android:text="Titol reward"

            android:textSize="20dp" />
        <TextView
            android:id="@+id/RewardPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"

            android:text="Points"

            android:textSize="20dp" />




    </LinearLayout>


    <LinearLayout
        android:id="@+id/RewardLayoutContent"
        android:layout_width="match_parent"
        android:paddingStart="30dp"
        android:paddingEnd="20dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rewardInfo"

            android:layout_width="match_parent"
            android:layout_height="84dp"

            android:text="" />

        <Button
            android:id="@+id/claimRewardButton"
            style="@style/buttonBig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:text="Claim" />

    </LinearLayout>


</LinearLayout>