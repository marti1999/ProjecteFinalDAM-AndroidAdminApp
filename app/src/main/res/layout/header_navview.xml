<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:background="@drawable/navheader"

    android:gravity="left"
    android:orientation="vertical">



    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profilePicture"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_gravity="left"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="32dp"
        app:civ_border_color="@color/grisLight"
        style="@style/navigationViewImage"
        app:civ_border_width="0dp" />

    <TextView
        android:id="@+id/navview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="bottom"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="117dp"
        android:layout_marginBottom="10dp"
        android:text=""
        style="@style/navigationViewTitle" />

    <TextView

        android:id="@+id/navview_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="bottom"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="157dp"
        android:layout_marginBottom="10dp"
        android:text=""
        style="@style/navigationViewSubTitle" />


</RelativeLayout>