<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/gris</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <!--<item name="buttonStyle">@style/RobotoButtonStyle</item>-->
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:textColorSecondary">@color/gris</item>


    </style>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="buttonBig">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/button_focused</item>
    </style>

    <style name="textViewNormal">
        <item name="android:textColor">@color/gris</item>
    </style>

    <style name="editTextDrawable">
        <item name="android:drawablePadding">20px</item>
        <item name="android:ems">10</item>
    </style>

    <style name="textViewPersonaItem">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="ButtonItemPersona">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_marginEnd">0dp</item>
    </style>

    <style name="checkboxItemEsdeveniment">
        <item name="android:buttonTint">@color/colorAccent</item>
        <item name="android:gravity">center|right</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="textViewItemEsdevenimentTitle">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="textViewItemEsdevenimentContent">
        <item name="android:visibility">gone</item>
    </style>

    <style name="imageViewEsdeveniment">
        <item name="android:visibility">visible</item>
    </style>

    <style name="editTextDrawable.NoFocusable">
        <item name="android:focusable">false</item>
    </style>

    <style name="toolbar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="navigationViewTitle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large.Inverse</item>
    </style>

    <style name="navigationViewSubTitle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large.Inverse</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="navigationViewImage">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="tabBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="toolbarWithTabs">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="commonTextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#494949</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/gris</item>
    </style>

</resources>
